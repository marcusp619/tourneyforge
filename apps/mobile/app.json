{
  "expo": {
    "name": "TourneyForge",
    "slug": "tourneyforge",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1d6b3e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tourneyforge.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TourneyForge uses your location to GPS-tag your catch submissions.",
        "NSLocationAlwaysUsageDescription": "TourneyForge uses your location to GPS-tag your catch submissions."
      }
    },
    "android": {
      "package": "com.tourneyforge.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1d6b3e"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "TourneyForge uses your location to GPS-tag your catch submissions."
        }
      ]
    ],
    "scheme": "tourneyforge",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "EXPO_PROJECT_ID_PLACEHOLDER"
      }
    }
  }
}
